{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@calendar-io/core": ["../packages/core/src/index.ts"],
      "@calendar-io/core/*": ["../packages/core/src/*"],
      "config": ["./src/index.ts"],
      "config/*": ["./src/*"]
    }
  }
}